# B3 Trading Platform - Production Environment Variables

# Database
DB_PASSWORD=CHANGE_ME_PRODUCTION_DB_PASSWORD
POSTGRES_DB=b3trading
POSTGRES_USER=trader

# Redis
REDIS_PASSWORD=CHANGE_ME_PRODUCTION_REDIS_PASSWORD

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# JWT Security
JWT_SECRET_KEY=CHANGE_ME_PRODUCTION_JWT_SECRET_KEY
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# B3 API (configure suas credenciais)
B3_API_KEY=YOUR_PRODUCTION_B3_API_KEY
B3_ENVIRONMENT=production

# MetaTrader 5
MT5_VNC_PASSWORD=CHANGE_ME_PRODUCTION_MT5_PASSWORD
MT5_LOGIN=YOUR_PRODUCTION_MT5_LOGIN
MT5_PASSWORD=YOUR_PRODUCTION_MT5_PASSWORD
MT5_SERVER=YOUR_PRODUCTION_BROKER_SERVER

# Trading Configuration
MAX_POSITION_SIZE=100000
MAX_DAILY_LOSS=5000
RISK_PERCENT=2.0
KELLY_FRACTION=0.25

# Monitoring
GRAFANA_PASSWORD=CHANGE_ME_PRODUCTION_GRAFANA_PASSWORD

# Environment
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=WARNING

# Frontend Configuration - Change this to your production domain
NEXT_PUBLIC_API_URL=https://your-domain.com