# B3 Trading Platform - Environment Variables Template
# Copy this file to .env and update the values

# Database Configuration
DB_PASSWORD=your_secure_db_password_here
POSTGRES_DB=b3trading
POSTGRES_USER=trader

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# JWT Security
JWT_SECRET_KEY=your_very_secure_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# B3 API Configuration (Optional - for real market data)
B3_API_KEY=YOUR_B3_API_KEY_HERE
B3_ENVIRONMENT=sandbox

# MetaTrader 5 Configuration (Optional - for MT5 integration)
MT5_LOGIN=YOUR_MT5_LOGIN
MT5_PASSWORD=YOUR_MT5_PASSWORD
MT5_SERVER=YOUR_BROKER_SERVER

# Trading Risk Management
MAX_POSITION_SIZE=100000
MAX_DAILY_LOSS=5000.00
RISK_PERCENT=2.0
KELLY_FRACTION=0.25

# Monitoring
GRAFANA_PASSWORD=your_grafana_admin_password

# Environment Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO